{
  "name": "akiflow-playwright-tests",
  "version": "1.0.0",
  "description": "Comprehensive test automation framework for Akiflow web application using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:headed": "npx playwright test --headed --workers=1 --project=chromium",
    "test:ui": "npx playwright test --ui --project=chromium",
    "test:debug": "npx playwright test --debug --project=chromium",
    "test:report": "playwright show-report", 
    "install:browsers": "npx playwright install chromium webkit",
    "codegen": "playwright codegen",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "playwright",
    "test-automation",
    "akiflow",
    "e2e-tests",
    "qa"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
