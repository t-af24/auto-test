{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"],
      "@fixtures/*": ["./fixtures/*"]
    }
  },
  "include": [
    "tests/**/*",
    "pages/**/*",
    "utils/**/*",
    "fixtures/**/*",
    "global-setup.ts",
    "global-teardown.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results"
  ]
}

